%html
%head
	%title Meta v0.03
	%meta{:charset => "utf-8"}
	%meta{:content => "ju2xsnd1maGRXky5A0gIjwznyKqPuMP8DKlFcGdnAgM", :name => "google-site-verification"}
	%meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1' }
	%meta{:content => "Meta is a social media management platform, tailored to help you grow on social media.", :name => "description"}
	%meta{:content => "Meta Softworks LTD", :name => "author"}
	%meta{:content => "meta, metaaa, analytics, social media analytics, insights, metrics, twitter", :name => "keywords"}
	%link{:href => "http://fonts.googleapis.com/css?family=Open+Sans", :rel => "stylesheet", :type => "text/css"}
	%link{:href => "/favicon.ico", :rel => "shortcut icon"}
	%link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}
	= stylesheet_link_tag "application", :media => "all"
	= javascript_include_tag 'application'
	= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Montserrat"
	= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", "application" 
	= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js","jquery.counterup.js","Chart.js","application","https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"
 
	= csrf_meta_tags
%body
	:javascript
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
