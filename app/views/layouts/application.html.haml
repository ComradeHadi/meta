	- id = request.fullpath
	- if id.include?("/users/sign_in") || id.include?("/users/sign_up")
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), "/"
					%ul.nav.navbar-nav.navbar-right
						.pull-right.new-button= button_to "Back", destroy_user_session_path, method: :delete, class: "btn btn-danger"
		= yield
	- elsif id.include?("/users/password/new") || id.include?("/users/password/edit")
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), "/"
					%ul.nav.navbar-nav.navbar-right
						.pull-right.new-button= button_to "Back", destroy_user_session_path, method: :delete, class: "btn btn-danger"
		= yield
	- elsif user_signed_in?	
		%nav.navbar.navbar-default
			.bar
				.container 
					.navbar-brand= link_to image_tag('barlogo.png', class: "barlogo"), root_path
					%ul.nav.navbar-nav.navbar-right
						%li= link_to "Blog", "http://blog.metaaa.org", :target => '_blank', :rel => 'tooltip', :title => 'Our Official Blog'
						%li= link_to "Insights", root_path, :rel => 'tooltip', :title => 'Twitter Analytics'
						%li= link_to "Schedule", '/scheduler', :rel => 'tooltip', :title => 'Schedule Tweets'
						%li= link_to "Suggest", "https://metaaa.typeform.com/to/Qy6a3s", :target => '_blank', :rel => 'tooltip', :title => 'Suggest Features'
						%li= link_to "Settings", edit_user_registration_path, :rel => 'tooltip', :title => 'Settings & Billing'
						.pull-right.new-button= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger"
		= yield
	- else
		.home
			%nav.navbar.navbar-default
				.bar
					.container
						.logo= link_to image_tag('barlogo.png', class: "logo"), root_path
						.blog= link_to "BLOG", "http://blog.metaaa.org/"
						.login= link_to "LOG IN", new_user_session_path
			.wrap{style:'text-align:center;'}
				%p.header= "Tailored for productive people."
				= button_to 'Create an Account', new_user_registration_path, method: :get, class: 'create'
			%p.copy Meta makes sense of social data, so you can make smarter decisions.
			.preview= link_to image_tag('preview.gif', class: "preview"), new_user_session_path