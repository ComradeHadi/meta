<div class="col-md-6 col-md-offset-3 loginbox">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				  	<div class="form-group">
				    	<%= f.input :email, label: 'Email address' , required: false, autofocus: true, input_html: { class: 'form-control'} %>
				    </div>
				    <div class="form-group">
				    	<%= f.input :password, required: false, input_html: { class: 'form-control' } %>
				    </div>
				    	<% if devise_mapping.rememberable? %>
					    	<!-- <div class="center">
					    		<div class="form-group">
					    			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
					    		</div>
					    	</div> -->
				    	<% end -%>
					</div>
					<div class="center">
					  <div class="form-actions">
					    <%= f.button :submit, "Sign in", class: "btn btn-success" %>
					  </div>
					</div>
				<% end %>
					<div class="center">
						<div class="forget"> 
						<%= link_to "Forgot password?", new_password_path('user'), class: "forgot"%>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
