<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag('barlogo.png', class: "whitelogo") %>
      </div>
      <div class="panel-body">
        <h2 align="center">Change your password</h2>
        <br>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { class: 'form-control'}  %>
            <%= f.input :password_confirmation, label: "New password (again)", required: true, input_html: { class: 'form-control'}  %>
          </div>
          <br>
          <div class="form-actions" align="center">
            <%= f.button :submit, "Change my password" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>